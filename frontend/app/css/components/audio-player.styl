.audio-player
  z-index 100
  position fixed
  width 100%
  bottom 0
  background-color #111111
  height 55px
  border-top 1px solid $layout_border_color

  audio
    display inline-block
    width 75%
    height 75%
    margin 0px
    padding 0px

  ul
    display inline-block
    li
      display inline-block
      button
        border 0
        color $font_color1
        background $primary_color4
        width 50px
        height 50px
        display inline-block
        border-radius 50%
