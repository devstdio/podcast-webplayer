.audio-player
  z-index 100
  position fixed
  width 100vw
  bottom 0
  background-color #111111
  height 55px
  border-top 1px solid $layout_border_color

  audio
    display inline-block
    width 75vw
    height 75%
    margin 0px
    padding 0px

  ul
    margin-top 8px
    vertical-align top
    display inline-block
    li
      display inline-block
      margin-left 4px
      button
        cursor pointer
        border 0
        color $font_color1
        background $primary_color4
        color $font_color1
        width 40px
        height 40px
        display inline-block
        border-radius 50%
        opacity 0.8
        &:hover
          opacity 1
        &.active
          background #fffce0
          color #3e4147
          opacity 1
