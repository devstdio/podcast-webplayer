.audio-player
  z-index 100
  position fixed
  width 100vw
  bottom 0
  background-color #111111
  height 55px
  border-top 1px solid $layout_border_color

  #intro
    width 100%
    height auto

  #idle
    width 100%
    margin-top 17px
    text-align center
    font-size $font_m

  #container
    width 100%
    height auto

  #playButton
    width 40px
    height 40px
    float left
    margin-left 20px
    margin-top 6px

  #progressBar
    width calc(100% - 180px)
    height 20px
    float left
    margin-left 20px
    margin-right 20px
    margin-top 17px

  #volumeControl
    width 40px
    height 40px
    float right
    margin-right 20px

  #title
    position absolute
    margin-top 17px
    width 100%
    text-align center
    color black
    pointer-events none
