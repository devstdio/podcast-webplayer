HEIGHT = 55px

.audio-player
  z-index 100
  position fixed
  width 100vw
  bottom 0
  background-color $color_a
  height HEIGHT
  border-top 1px solid $layout_border_color
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  color $color_a
  font-weight bold

  a
    display inline-block
    img
      width HEIGHT
      height HEIGHT

  div.player
    display inline-block
    height HEIGHT

  #circle
    stroke $color_d
    fill $color_a

  #intro
    width 100%
    height auto

  #idle
    width 100%
    margin-top 17px
    text-align center
    font-size $font_m

  #container
    width 100%
    height auto

  #playButton
    position absolute
    width 44px
    height 44px
    margin-left 10px
    margin-top 6px

    #play,#pause,#spinner
      stroke $color_c
      fill $color_c

    #spinner
      fill $color_a

  #progressBar
    position absolute
    width calc(100% - 235px)
    // width calc(100% - 180px)
    height 22px
    margin-left 64px
    margin-top 17px
    border-radius: 14px;
    overflow: hidden;
    #base
      fill $color_b
      opacity 0.5
    #load
      fill $color_b
      opacity 1
    #time
      fill $color_d
      opacity 1

  #volumeControl
    position absolute
    width 40px
    height 40px
    margin-top 6px
    right 64px

    rect
      fill $color_c

  #speedButton
    position absolute
    width: 44px
    height: 44px
    right 10px
    margin-top 6px

  #title
    position absolute
    line-height 55px
    width 100%
    text-align left
    left HEIGHT + 74px
    pointer-events none
    user-select none
    z-index 1
    font-weight bold
    font-size $font_ss

  #playbackTime
    font-size $font_ss
    position absolute
    line-height 55px
    width 100%
    text-align right
    pointer-events none
    z-index 1
    right 130px
    font-weight bold

  @keyframes frames {
    0% {
      transform-origin center center
      transform rotate(0deg)
    }
    100% {
      transform-origin center center
      transform rotate(360deg)
    }
  }

  #spinner
    animation frames 500ms infinite linear
