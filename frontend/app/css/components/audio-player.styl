.audio-player
  z-index 100
  position fixed
  width 100vw
  bottom 0
  background-color #111111
  height 55px
  border-top 1px solid $layout_border_color
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

  #intro
    width 100%
    height auto

  #idle
    width 100%
    margin-top 17px
    text-align center
    font-size $font_m

  #container
    width 100%
    height auto

  #playButton
    position absolute
    width 44px
    height 44px
    margin-left 10px
    margin-top 6px

  #progressBar
    position absolute
    width calc(100% - 180px)
    height 26px
    margin-left 64px
    margin-top 15px
    border-radius: 4px;
    overflow: hidden;

  #volumeControl
    position absolute
    width 40px
    height 40px
    margin-top 6px
    right 64px

  #speedButton
    position absolute
    width: 44px
    height: 44px
    right 10px
    margin-top 6px

  #title
    position absolute
    line-height 55px
    width 100%
    text-align left
    left 74px
    color black
    pointer-events none
    user-select none
    z-index 1
    font-weight bold
    font-size $font_s
    top 1px;

  #playbackTime
    font-size $font_ss
    position absolute
    line-height 55px
    width 100%
    text-align right
    color black
    pointer-events none
    z-index 1
    right 130px
    font-weight bold
    top 1px;

  @keyframes frames {
    0% {
      transform-origin center center
      transform rotate(0deg)
    }
    100% {
      transform-origin center center
      transform rotate(360deg)
    }
  }

  #spinner
    animation frames 500ms infinite linear
