.add-content
  margin-top 14px
  float left
  margin-left $default_margin * 4

  button
    cursor pointer
    border-top-right-radius 20px
    border-bottom-right-radius 20px
    border 0
    padding 4px 14px
    background #dab86f
    color #3f4247
    opacity 0.8
    transition opacity 0.2s
    &:hover
      opacity 1

  input
    height 27px
    width 250px
    border-top-left-radius 20px
    border-bottom-left-radius 20px
    border none
    background-color $primary_color4
    color $font_color1
    padding-left 14px

    &::-webkit-input-placeholder
      color $font_color1

