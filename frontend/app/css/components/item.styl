WIDTH = 180px
HEIGHT = 180px

.item
  margin-bottom $default_margin
  margin-right $default_margin
  display inline-block
  vertical-align top

  .top
    font-size $font_ss

  .mid
    position relative
    width WIDTH
    height HEIGHT

  .bot
    font-size $font_s

  .text
    width WIDTH
    z-index 1
    padding 2px
    background-color rgba(0,0,0,0.5)

  .hitArea
    position absolute
    width WIDTH
    height HEIGHT
    background-color #000000;
    z-index 2
    opacity 0

  .cover
    width WIDTH
    height WIDTH
    z-index 0

  .btn
    position absolute
    width 80px
    height 80px
    z-index 3
    background-color rgba(255,255,255,0.75)
    border-radius 100%
    left 50%
    top 50%
    transform translate(-50%, -50%)
