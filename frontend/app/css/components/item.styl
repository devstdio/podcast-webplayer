SIZE = 160px

.item
  position relative
  width SIZE
  height SIZE
  margin-bottom $default_margin
  margin-right $default_margin
  display inline-block

  .hitArea
    position absolute
    width SIZE
    height SIZE
    background-color #FFF;
    z-index 1
    opacity 0

  .cover
    position absolute
    width SIZE
    height SIZE

  .btn
    position absolute
    width 80px
    height 80px
    z-index 2

.item.entry
  .icon
    display block

.item.feed
  .icon
    display none
