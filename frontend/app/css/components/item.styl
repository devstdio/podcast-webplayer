WIDTH = 200px
HEIGHT = 200px

.item
  position relative
  cursor pointer
  margin-bottom $default_margin * 2
  margin-right $default_margin * 2
  display inline-block
  vertical-align top
  transition border-color 0.2s
  text-align left
  border-radius 4px
  overflow hidden
  box-sizing border-box
  border 2px solid $color_a

  &:hover
    border-color $color_d

    .bot,.top
      opacity 1

  .shadow
    position absolute
    left 0px
    top 0px
    right 0px
    bottom 0px
    z-index 1
    box-shadow inset 0 0 100px rgba(0,0,0,0.2)

  .top
    font-size $font_ss
    color $color_d
    background-color $color_a
    z-index 3
    opacity 0.4
    div
      overflow hidden
      white-space nowrap
      text-overflow ellipsis

  .mid
    position relative
    width WIDTH
    height HEIGHT

  .bot
    opacity 0.4
    font-size $font_s
    background-color $color_a
    color $color_c

  .text
    width WIDTH
    z-index 1
    padding 8px 12px

  .cover
    width WIDTH
    height WIDTH
    z-index 0

    .cover-shadow
      position absolute
      width 100%
      height 100%
      z-index 2
      box-shadow inset 0 0 80px rgba(0,0,0,0.5)

  .btn
    position absolute
    width 80px
    height 80px
    z-index 3
    left 50%
    top 50%
    transform translate(-50%, -50%)
    -webkit-transform translate(-50%, -50%)
    transition opacity 0.2s
    opacity 0.5
    &:hover
      opacity 1
