SIZE = 160px

.item
  width SIZE
  height SIZE
  margin-bottom DEFAULT_MARGIN
  margin-right DEFAULT_MARGIN
  float left

  .cover
    width SIZE
    height SIZE

  .icon
    position absolute
    width SIZE
    height SIZE
    z-index 1

    .icon-img
      position absolute
      top 50%
      left 50%
      width auto
      height 100%
      transform translate(-50%, -50%)

      path
        fill #FFFFFF

.item.entry
  .icon
    display block

.item.feed
  .icon
    display none
