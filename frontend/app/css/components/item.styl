WIDTH = 200px
HEIGHT = 200px

.item
  position relative
  cursor pointer
  margin-bottom $default_margin*2
  margin-right $default_margin*2
  display inline-block
  vertical-align top
  transition border-color 0.2s
  text-align center
  border-radius: 8px;
  overflow hidden
  box-sizing border-box
  border-style solid
  border-color rgba(0,0,0,0)
  border-width 2px 2px
  &:hover
    border-color $color_c

    .bot,.top
      color $color_c

  .shadow
    position absolute
    left:0px;
    top:0px;
    right:0px;
    bottom:0px;
    z-index 1
    box-shadow inset 0 0 100px rgba(0,0,0,0.25)

  .top
    font-size $font_ss
    color $color_b
    background-color $color_a
    z-index 3
    div
      z-index 10

  .mid
    position relative
    width WIDTH
    height HEIGHT

  .bot
    font-size $font_s
    background-color $color_a
    color $color_b
    div
      z-index 3

  .text
    width WIDTH
    z-index 1
    padding 2px

  .cover
    width WIDTH
    height WIDTH
    z-index 0

    .cover-shadow
      position absolute
      width WIDTH
      height HEIGHT
      z-index 2
      box-shadow inset 0 0 80px rgba(0,0,0,0.5)

  .btn
    position absolute
    width 80px
    height 80px
    z-index 3
    left 50%
    top 50%
    transform translate(-50%, -50%)
    -webkit-transform translate(-50%, -50%)
    transition opacity 0.2s
    opacity 0.1
    &:hover
      opacity 1
