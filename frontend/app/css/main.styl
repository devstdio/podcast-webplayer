@import 'constants'

#rumbleCloseButton
  display none

*
  margin 0
  padding 0
  box-sizing border-box

body, input, button, select, textarea
  font-family 'Open Sans', sans-serif
  font-size 14px

body
  background-color $color_b
  color $font_color3

a
  outline none
  color $color_d
  text-decoration none
  opacity 1

  &.active
    opacity 1

button
  outline none

// headings
h1
  font-size 2em

h2
  font-size 1.2em

h3
  text-transform uppercase
  font-size 0.8em

p
  margin 0.5em 0 1em 0

.app-container
  display block
  height 100vh

.state-container
  position fixed
  left 20vw
  top 0
  display inline-block
  padding 10px 32px 10px 32px
  margin-top 55px
  width 80vw
  height calc(100vh - 110px)
  overflow auto
  box-shadow inset 0 0 100px rgba(0,0,0,0.5)
  // border-left 1px solid $layout_border_color

@import "header.styl"
@import "sidebar.styl"
@import 'loading'
@import 'section'
@import 'components/add-content.styl'
@import 'components/audio-player.styl'
@import 'components/searchbar.styl'
@import 'components/profile-widget.styl'
@import 'components/item'
@import 'components/item-list'
@import 'components/cover'
