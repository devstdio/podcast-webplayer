@import 'constants'

#rumbleCloseButton
  display none

*
  margin 0
  padding 0
  box-sizing border-box

body, input, button, select, textarea
  font-family 'Open Sans', sans-serif
  font-size 14px

body
  background-color $color_b
  color $font_color3

a
  outline none
  color $color_d
  text-decoration none
  opacity 1

  &.active
    opacity 1

input
  &::placeholder
    color $font_color1

  &:focus
    outline-width 0
    border-style solid
    border-color #fffce0
    border-width 2px 2px

button
  outline none

// headings
h1
  font-size 2em
  a
    text-decoration underline
    &:hover
      text-decoration none

h2
  font-size 1.8em
  margin 38px 0 8px 0

h3
  text-transform uppercase
  font-size 0.8em

p
  margin 0.5em 0 1em 0

.app-container
  display block
  height 100vh

.state-container
  position fixed
  left 20vw
  top 0
  display inline-block
  padding 10px 32px 10px 32px
  margin-top 55px
  width 80vw
  height calc(100vh - 110px)
  overflow auto
  box-shadow inset 0 0 40px rgba(0,0,0,0.5)
  // box-shadow inset 0 0 100px rgba(0,0,0,0.5)

  .vertical-scroll
    .pagination-overview
      width 100%
      z-index 100

    &.scrolling
      margin-top 64px
      .pagination-overview
        top 48px
        position fixed
        border-bottom 1px solid $color_a

    .last-page-notice
      text-align center
      padding 34px 0
      background $color_a
      color $color_b

    .loading-bar
      background #fff

